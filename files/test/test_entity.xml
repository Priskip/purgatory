    <VariableStorageComponent
        name="boss_bar_outline"
        value_string="mods/purgatory/files/ui_gfx/boss_bars/boss_alchemist_outline.png"
        >
    </VariableStorageComponent>

    <VariableStorageComponent
        name="boss_bar_fill"
        value_string="mods/purgatory/files/ui_gfx/boss_bars/boss_alchemist_fill.png"
        >
    </VariableStorageComponent>

    <VariableStorageComponent
        name="boss_bar_position"
        value_string="CENTER"
        >
    </VariableStorageComponent>

    <VariableStorageComponent
        name="boss_name"
        value_string="Pilferialkemisti"
