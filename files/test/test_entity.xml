			fire_probability_of_ignition="0"
			ragdoll_fx_forced="DISINTEGRATED"
			ragdoll_material="rock_static_glow"
			critical_damage_resistance="0.8"
			physics_objects_damage="0"
			air_needed="0" 
			>
			<damage_multipliers
			slice="0.0"
			projectile="0.3"
			electricity="0.6"
			fire="0.4"
			>
			</damage_multipliers>
