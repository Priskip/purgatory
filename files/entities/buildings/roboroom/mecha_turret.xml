<Entity tags="enemy,mortal,human,hittable,teleportable_NOT,polymorphable_NOT,necrobot_NOT,glue_NOT,roboroom_mecha_turret_alive">

    <SpriteComponent
        _enabled="1"
        alpha="1"
        image_file="mods/purgatory/files/buildings_gfx/roboroom/mecha_turret.xml"
        next_rect_animation=""
        offset_x="0"
        offset_y="0"
        visible="1"
        z_index="1"
        ></SpriteComponent>

    <SpriteComponent
        _enabled="1"
        alpha="0"
        image_file="mods/purgatory/files/buildings_gfx/roboroom/mecha_turret_firing.xml"
        next_rect_animation=""
        offset_x="0"
        offset_y="0"
        visible="1"
        z_index="0"
        ></SpriteComponent>

    <!-- This component is executed after 5 frames to give time for center_point.xml to be spawned by roboroom.lua -->
    <LuaComponent
        _tags="init_script"
        remove_after_executed="1"
        execute_every_n_frame="5"
        script_source_file="mods/purgatory/files/scripts/buildings/roboroom/mecha_turret_init.lua"
        ></LuaComponent>

    <LuaComponent script_death="mods/purgatory/files/scripts/buildings/roboroom/mecha_turret_death.lua"></LuaComponent>

    <HitboxComponent
        _tags="hitbox_default"
        aabb_min_x="-6.5"
        aabb_max_x="6.5"
        aabb_min_y="-19"
        aabb_max_y="0"
        damage_multiplier="1.0"
        ></HitboxComponent>

    <GenomeDataComponent
        food_chain_rank="5"
        herd_id="robot"
        is_predator="1"
        ></GenomeDataComponent>

    <DamageModelComponent
        hp="128"
        max_hp="128"
        air_needed="0"
        falling_damages="0"
        fire_damage_amount="0.2"
        fire_probability_of_ignition="0"
        blood_material="liquid_fire"
        is_on_fire="0"
        materials_damage="1"
        materials_how_much_damage="0.00001,0.00001"
        materials_that_damage="lava,magic_liquid_mana_regeneration"
        create_ragdoll="0"
        blood_sprite_directional="data/particles/bloodsplatters/bloodsplatter_directional_oil_$[1-3].xml"
        blood_sprite_large="data/particles/bloodsplatters/bloodsplatter_oil_$[1-3].xml"
        >
        <damage_multipliers
            melee="0"
            projectile="0.25"
            explosion="0.1"
            electricity="0.8"
            fire="0"
            slice="0.6"
            ></damage_multipliers>
    </DamageModelComponent>

    <Entity tags="mecha_turret_laser_spot">
        <SpriteComponent
            alpha="0.2"
            image_file="mods/purgatory/files/buildings_gfx/roboroom/mecha_turret_light_blue.xml"
            smooth_filtering="1"
            fog_of_war_hole="1"
            emissive="1"
            additive="0"
            ></SpriteComponent>
    </Entity>

    <SpriteComponent
        _tags="health_bar_back,ui"
        _enabled="1"
        alpha="1"
        has_special_scale="1"
        image_file="data/ui_gfx/health_slider_back.png"
        is_text_sprite="0"
        next_rect_animation=""
        offset_x="12"
        offset_y="-20"
        rect_animation=""
        special_scale_x="1"
        special_scale_y="1"
        ui_is_parent="0"
        update_transform="1"
        visible="1"
        emissive="1"
        never_ragdollify_on_death="1"
        z_index="-9000"
        ></SpriteComponent>

    <SpriteComponent
        _tags="health_bar,ui"
        _enabled="1"
        alpha="1"
        has_special_scale="1"
        image_file="mods/purgatory/files/ui_gfx/health_slider_front_light_blue.png"
        is_text_sprite="0"
        next_rect_animation=""
        offset_x="12"
        offset_y="-20"
        rect_animation=""
        special_scale_x="1"
        special_scale_y="1"
        ui_is_parent="0"
        update_transform="1"
        visible="1"
        emissive="1"
        never_ragdollify_on_death="1"
        z_index="-9000"
        ></SpriteComponent>

    <HealthBarComponent></HealthBarComponent>

