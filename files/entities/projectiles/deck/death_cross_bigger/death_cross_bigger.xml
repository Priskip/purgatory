<Entity
  name="$projectile_default"
  tags="projectile_player,death_cross,death_cross_bigger"
  >

  <Base file="data/entities/base_projectile.xml">
    <VelocityComponent
      gravity_y="0"
      air_friction="0"
      mass="0.08"
      >
    </VelocityComponent>
  </Base>

  <ProjectileComponent
    _enabled="1"
    lob_min="0.8"
    lob_max="1.0"
    speed_min="0"
    speed_max="0"
    die_on_low_velocity="0"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0"
    on_lifetime_out_explode="1"
    explosion_dont_damage_shooter="0"
    damage="0.0"
    on_collision_die="0"
    bounces_left="20"
    lifetime="900"
    shoot_light_flash_r="120"
    shoot_light_flash_g="56"
    shoot_light_flash_b="255"
    shoot_light_flash_radius="90"
    knockback_force="2.8"
    damage_every_x_frames="2"
    >
    <damage_by_type
      fire="0.0"
      melee="0.0"
      >
    </damage_by_type>
    <config_explosion
      never_cache="1"
      camera_shake="30.5"
      explosion_radius="35"
      explosion_sprite="data/particles/explosion_032_slime.xml"
      explosion_sprite_lifetime="0.0"
      create_cell_probability="10"
      create_cell_material="spark_purple"
      load_this_entity="mods/purgatory/files/entities/projectiles/deck/death_cross_bigger/death_cross_bigger_explosion.xml"
      explosion_sprite_additive="1"
      ray_energy="2039000"
      max_durability_to_destroy="11"
      hole_destroy_liquid="1"
      hole_enabled="1"
      damage="4"
      hole_image="data/temp/explosion_hole.png"
      particle_effect="0"
      damage_mortals="1"
      physics_explosion_power.min="1.2"
      physics_explosion_power.max="2.2"
      physics_throw_enabled="1"
      shake_vegetation="1"
      sparks_enabled="1"
      sparks_count_max="20"
      sparks_count_min="10"
      spark_material="spark_purple"
      light_fade_time="1.2"
      light_r="120"
      light_g="56"
      light_b="255"
      stains_enabled="1"
      stains_image="data/temp/explosion_stain.png"
      audio_enabled="0"
      >
    </config_explosion>
  </ProjectileComponent>

  <SpriteComponent
    _enabled="0"
    alpha="1"
    image_file="data/projectiles_gfx/glow.xml"
    next_rect_animation=""
    offset_x="32"
    offset_y="32"
    rect_animation="fireball"
    additive="1"
    update_transform_rotation="0"
    >
  </SpriteComponent>

  <LightComponent
    _enabled="1"
    radius="250"
    r="120"
    g="56"
    b="255"
    >
  </LightComponent>

  <!-- Cross Particle (Horizontal)-->
  <ParticleEmitterComponent
    emitted_material_name="spark_purple"
    offset.x="0"
    offset.y="0"
    x_pos_offset_min="-1"
    y_pos_offset_min="-1"
    x_pos_offset_max="1"
    y_pos_offset_max="1"
    x_vel_min="-120"
    x_vel_max="120"
    y_vel_min="0"
    y_vel_max="0"
    gravity.y="0"
    count_min="1"
    count_max="2"
    lifetime_min="0.3"
    lifetime_max="2.6"
    create_real_particles="0"
    emit_cosmetic_particles="1"
    fade_based_on_lifetime="1"
    emission_interval_min_frames="1"
    emission_interval_max_frames="1"
    is_emitting="1"
    render_ultrabright="1"
    >
  </ParticleEmitterComponent>

  <!-- Cross Particle (Vertical)-->
  <ParticleEmitterComponent
    emitted_material_name="spark_purple"
    offset.x="0"
    offset.y="0"
    x_pos_offset_min="-1"
    y_pos_offset_min="-1"
    x_pos_offset_max="1"
    y_pos_offset_max="1"
    x_vel_min="0"
    x_vel_max="0"
    y_vel_min="-120"
    y_vel_max="120"
    gravity.y="0"
    count_min="1"
    count_max="2"
    lifetime_min="0.3"
    lifetime_max="2.6"
    create_real_particles="0"
    emit_cosmetic_particles="1"
    fade_based_on_lifetime="1"
    emission_interval_min_frames="1"
    emission_interval_max_frames="1"
    is_emitting="1"
    render_ultrabright="1"
    >
  </ParticleEmitterComponent>

  <AudioComponent
    file="data/audio/Desktop/projectiles.bank"
    event_root="player_projectiles/death_cross_big"
    >
  </AudioComponent>

  <VariableStorageComponent
    name="projectile_file"
    value_string="mods/purgatory/files/entities/projectiles/deck/death_cross_bigger/death_cross_bigger.xml"
    >
  </VariableStorageComponent>

  <!-- Custom Logic -->
  <VariableStorageComponent
    name="power_level"
    value_float="0"
    ></VariableStorageComponent>

  <VariableStorageComponent
    name="projectiles_absorbed"
    value_int="0"
    ></VariableStorageComponent>

  <VariableStorageComponent
    name="stored_damage"
    value_float="0"
    ></VariableStorageComponent>

  <VariableStorageComponent
    name="stored_damage_by_type"
    value_string="ice=0,electricity=0,radioactive=0,slice=0,curse=0,overeating=0,projectile=0,healing=0,physics_hit=0,explosion=0,poison=0,melee=0,drill=0,fire=0.0"
    ></VariableStorageComponent>

  <LuaComponent
    script_source_file="mods/purgatory/files/scripts/projectiles/death_cross_bigger/logic.lua"
    execute_every_n_frame="1"
    >
  </LuaComponent>

  <!-- <LuaComponent
    script_source_file="mods/purgatory/files/scripts/projectiles/death_cross_bigger/debug_display.lua"
    execute_every_n_frame="1"
    >
  </LuaComponent> -->

  <LuaComponent
    execute_on_removed="1"
    execute_every_n_frame="-1"
    script_source_file="mods/purgatory/files/scripts/projectiles/death_cross_bigger/explosion.lua"
    remove_after_executed="0"
    >
  </LuaComponent>

</Entity>