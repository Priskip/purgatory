        damage="0"
        velocity_sets_scale="1"
        lifetime_randomness="7"
        ragdoll_force_multiplier="0.04"
        hit_particle_force_multiplier="5.5 "
        camera_shake_when_shot="5.0"
        bounces_left="4"
        shoot_light_flash_radius="80"
        muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_launcher_large.xml"
        knockback_force="2.0"
        >
        <config_explosion
            load_this_entity="mods/purgatory/files/entities/projectiles/deck/rat_cannon_explosion.xml"
            never_cache="0"
            camera_shake="10"
            explosion_radius="25"
            explosion_sprite="data/particles/bloodsplatters/bloodsplatter_large_1.xml"
            explosion_sprite_lifetime="0"
