            hole_destroy_liquid="0"
            explosion_sprite_additive="1"
            hole_enabled="1"
            ray_energy="1500000"
            damage="6.8"
            particle_effect="0"
            damage_mortals="1"
            physics_explosion_power.min="0.8"
            physics_explosion_power.max="01.24"
            physics_throw_enabled="1"
            shake_vegetation="1"
            sparks_count_min="10"
            sparks_count_max="30"
            spark_material="poo"
            sparks_enabled="1"
            stains_enabled="1"
            stains_radius="12"
            audio_event_name="animals/rat/death"
            >
        </config_explosion>
    </ProjectileComponent>

    <SpriteComponent
        _enabled="1"
        alpha="1"
        image_file="mods/purgatory/files/projectiles_gfx/rat_cannon.xml"
        next_rect_animation=""
        offset_x="0"
        offset_y="0"
        rect_animation=""
        >
    </SpriteComponent>

    <ParticleEmitterComponent
        emitted_material_name="smoke"
        offset.x="0"
        offset.y="0"
        x_pos_offset_min="-1"
        y_pos_offset_min="-1"
        x_pos_offset_max="1"
